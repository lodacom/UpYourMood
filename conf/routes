# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST	/							controllers.Application.connection()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET 	/essai.html					controllers.ControlTweet.listTweet()
POST 	/essai.html					controllers.ControlTweet.newTweet()
POST 	/essai.html:id/delete		controllers.ControlTweet.deleteTweet(id: Long)
GET		/accueil.html				controllers.ControlAccueil.index()
GET		/inscription.html			controllers.ControlUser.index()
POST 	/inscription.html			controllers.ControlUser.newUser()